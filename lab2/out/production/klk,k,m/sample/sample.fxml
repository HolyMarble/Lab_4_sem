<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" prefHeight="100.0" prefWidth="100.0" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <ButtonBar prefHeight="70.0" prefWidth="200.0" GridPane.rowIndex="4">
        <buttons>
            <Button fx:id="circle" mnemonicParsing="false" prefHeight="200.0" prefWidth="250.0" text="Draw Circle" translateX="-60.0" translateY="80.0">
               <font>
                  <Font name="Calibri Bold" size="10.0" />
               </font></Button>
            <Button fx:id="rectangle" mnemonicParsing="false" prefHeight="200.0" prefWidth="250.0" text="Draw Rectangle" translateX="40.0" translateY="80.0">
               <font>
                  <Font name="Calibri Bold" size="10.0" />
               </font></Button>
        </buttons>
      </ButtonBar>
      <Pane fx:id="figurePane" prefHeight="100.0" prefWidth="100.0" />
   </children>
</GridPane>
